<web-app>
    <display-name>Department Web App</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.aleksieienko.department.web.app.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/jsp/*</url-pattern>
        <url-pattern>/index.jsp</url-pattern>
        <servlet-name>DepartmentServlet</servlet-name>
        <servlet-name>AddDepartmentServlet</servlet-name>
        <servlet-name>DeleteDepartmentServlet</servlet-name>
        <servlet-name>UpdateDepartmentServlet</servlet-name>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
    </filter-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
</web-app>
